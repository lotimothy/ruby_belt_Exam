<div class="container">
  <div class="row">

    <div class="col s6">
      <h4>Lender</h4>
      <form action="/lenders" method="post">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        <div class="input-field">
          <input type="text" name="lender[first_name]">
          <label>First Name</label>
        </div>
        <div class="input-field">
          <input type="text" name="lender[last_name]">
          <label>Last Name</label>
        </div>
        <div class="input-field">
          <input type="text" name="lender[email]">
          <label>Email</label>
        </div>
        <div class="input-field">
          <input type="password" name="lender[password]">
          <label>Password</label>
        </div>
        <div class="input-field">
          <input type="password" name="lender[password_confirmation]">
          <label>Password Confirmation</label>
        </div>
        <div class="input-field">
          <input type="text" name="lender[money]">
          <label>Money</label>
        </div>
        <button class="btn green lighten-1" type="submit">Register</button>
      </form>
      <p><a href="/login">Already a member?</a></p>
      <% if flash[:lender_errors] %>
          <% flash[:lender_errors].each do |error| %>
              <p><%= error %></p>
          <% end %>
      <% end %>
    </div>

    <div class="col s6">
      <h4>Borrower</h4>
      <form action="/borrowers" method="post">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        <div class="input-field">
          <input type="text" name="borrower[first_name]">
          <label>First Name</label>
        </div>
        <div class="input-field">
          <input type="text" name="borrower[last_name]">
          <label>Last Name</label>
        </div>
        <div class="input-field">
          <input type="text" name="borrower[email]">
          <label>Email</label>
        </div>
        <div class="input-field">
          <input type="password" name="borrower[password]">
          <label>Password</label>
        </div>
        <div class="input-field">
          <input type="password" name="borrower[password_confirmation]">
          <label>Password Confirmation</label>
        </div>
        <div class="input-field">
          <input type="text" name="borrower[purpose]">
          <label>Need Money For</label>
        </div>
        <div class="input-field">
          <textarea class="materialize-textarea" name="borrower[description]"></textarea>
          <label>Description</label>
        </div>
        <div class="input-field">
          <input type="text" name="borrower[money]">
          <label>Amount Needed</label>
        </div>
        <button class="btn red lighten-1" type="submit">Register</button>
      </form>
      <p><a href="/login">Already a member?</a></p>
      <% if flash[:borrower_errors] %>
          <% flash[:borrower_errors].each do |error| %>
              <p><%= error %></p>
          <% end %>
      <% end %>
    </div>

  </div>
</div>